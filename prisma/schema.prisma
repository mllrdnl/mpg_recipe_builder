generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Nutrient {
  id String @id @default(cuid())
  fdc_id Int @unique
  ndb_id Int? @unique
  name String
  amount Decimal @db.Decimal(10,4) @default(0)
  unit String
}

model Ingredient {
  id String @id @default(cuid())
  fdc_id Int @unique
  ndb_id Int? @unique
  name String
  category String
  nutrients Nutrient[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name, category])
}


